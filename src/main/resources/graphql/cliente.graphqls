extend type Query {
    clienteController: ClienteController!
}

extend type Mutation {
    clienteController: ClienteController!
}

type ClienteController {
    findById(id: ID!): Cliente
    save(cliente: ClienteInput!): ID!
    update(cliente: ClienteInput!): Cliente
    delete(id: ID!): Boolean
}

type Cliente {
    id: ID
    nome: String
    documento: String
    pedidos: [Pedido]
}

input ClienteInput {
    id: ID
    nome: String
    documento: String
    pedidos: [PedidoInput]
}